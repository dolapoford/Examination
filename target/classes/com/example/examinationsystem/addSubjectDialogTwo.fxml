<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<DialogPane minHeight="250.0" prefWidth="500.0" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #FFFFFF;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.examinationsystem.Score">
   <content>
      <VBox alignment="TOP_CENTER" prefHeight="266.0" prefWidth="498.0" spacing="20.0">
         <children>
            <TextField fx:id="courseCode" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" promptText="Course Code" styleClass="input_email" stylesheets="@Style.css" />
            <TextField fx:id="courseName" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" promptText="Course Name" styleClass="input_email" stylesheets="@Style.css" />
            <TextField fx:id="qnsPerExam" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" promptText="Qns Per Exam" styleClass="input_email" stylesheets="@Style.css" />
            <Button fx:id="addSubject" mnemonicParsing="false" onAction="#addSubject" prefHeight="40.0" prefWidth="250.0" styleClass="btn_add" stylesheets="@Style.css" text="ADD" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</DialogPane>
